<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">


    <EditText
        android:id="@+id/textGender"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="47dp"
        android:text="..."
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAge"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/genderTitle"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="Gender:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageTitle"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textAge"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="47dp"
        android:text="..."
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBirthday"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ageTitle"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="Age:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdayTitle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/profileQR"
        android:layout_width="105dp"
        android:layout_height="96dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileAccountName"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/profileAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="Profile Name"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/textBirthday"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="47dp"
        android:text="..."
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMajor"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/birthdayTitle"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="Birthday:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/majorTitle"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textMajor"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="47dp"
        android:text="..."
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/majorTitle"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:text="Major:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTitle" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="Email:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTitle"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textName"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="47dp"
        android:text="..."
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="47dp"
        android:text="..."
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="135dp"
        android:layout_height="101dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:text="Name:"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="227dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/description"
        android:layout_width="365dp"
        android:layout_height="163dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="7dp"
        android:text="Student Description"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="3dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
